@import "../../styles/colors.styl"

footer
  color black
  position absolute
  bottom 0
  width 100%
  height 90px
  background-color dark-grey
  text-align left
  padding 20px 50px

.created
  font-size 10px
  font-weight 300

.footer-links
  font-size 15px
  font-weight 900
  margin 0 0 10px
  padding 0
  a
    color dark-pink
    display inline-block
    line-height 1.8
    text-decoration none
  a:hover
    color pink

.footer-right
  margin-top 6px
  max-width 180px
  a
    display inline-block
    width 35px
    height 35px
    border-radius 100px
    font-size 20px
    color dark-pink
    background-color pink
    text-align center
    line-height 35px
    margin-left 3px
  a:hover
    color pink
    background-color dark-pink



  /* If you don't want the footer to be responsive, remove these media queries */

  @media (max-width: 600px) {

  	.footer-distributed .footer-left,
  	.footer-distributed .footer-right{
  		text-align: center;
  	}

  	.footer-distributed .footer-right{
  		float: none;
  		margin: 0 auto 20px;
  	}

  	.footer-distributed .footer-left p.footer-links{
  		line-height: 1.8;
  	}
  }
